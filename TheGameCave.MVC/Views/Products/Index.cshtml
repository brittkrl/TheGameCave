@using TheGameCave.Lib.DTO
@model List<ProductBasicDto>


<h1>Products</h1>

<div class="row">
    <div class="col-4">
        <ul class="list-group">
            @foreach (var product in Model)
            {
                <li class="list-group-item">
                    <a asp-area="" asp-controller="Books" asp-action="Detail" asp-route-id="@product.Id">
                        @product.Name
                    </a> <em>(@product.Id)</em>
                </li>
            }
        </ul>
    </div>
</div>